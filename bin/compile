#!/usr/bin/env bash

# Ensure wildcards in globs match dotfiles too.
shopt -s dotglob

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

echo "BEFORE FILE REORGANIZE"
ls -lah "${BUILD_DIR}"

(
    mv "${BUILD_DIR}"/* "${STAGE}/" &&
    mv "${STAGE}/$(basename "$APP_BASE")"/* "${BUILD_DIR}" &&
    rm -d "${STAGE}/$(basename "$APP_BASE")" &&
    mkdir "${BUILD_DIR}/.monorepo" &&
    mv "${STAGE}"/* "${BUILD_DIR}/.monorepo/" &&
    ln -s ../.. "${BUILD_DIR}/.monorepo/$(basename "$APP_BASE")"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi

echo "AFTER FILE REORGANIZE"
ls -lah "${BUILD_DIR}"
ls -lah "${BUILD_DIR}/.monorepo"

echo "Copied ${APP_BASE} to root of app successfully" | indent

